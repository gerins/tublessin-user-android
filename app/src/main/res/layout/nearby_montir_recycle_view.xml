<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/themeColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/photo_nearby_montir"
            android:layout_width="92dp"
            android:layout_height="73dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/firstname_nearby_montir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="12dp"
            android:text="Garin"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/photo_nearby_montir"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lastname_nearby_montir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:text="Prakoso"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/firstname_nearby_montir"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/distance_nearby_montir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="2.3 Km"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="19dp"
            android:layout_height="21dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@+id/photo_nearby_montir"
            app:layout_constraintTop_toBottomOf="@+id/firstname_nearby_montir"
            app:srcCompat="@drawable/ic_baseline_star_24" />

        <TextView
            android:id="@+id/rating_nearby_montir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="4.9"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/firstname_nearby_montir" />

        <TextView
            android:id="@+id/status_nearby_montir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="38dp"
            android:text="Standby"
            android:textColor="#4CAF50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/distance_nearby_montir" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>